# Edge Case Comparisons
SELECT 0 = 0.0;        -- True
SELECT -1 = -1.0;      -- True
SELECT 42 < 42.0001;   -- True
SELECT 42.0 > 41.9999; -- True
SELECT 42.0 < 42.0001; -- True

# Arithmetic Operations with Comparisons
